{
  // create the timer, run for short period time
  import timer;

  var timerStart: opaque = startTimer();
  for (var i: int = 0; i < 1000 * 1; i++);
  var timerStop: opaque = timerStart.stopTimer();

  // create some timer for longer period
  var timerStartTwo: opaque = startTimer();
  for (var i: int = 0; i < 1000 * 10; i++);
  var timerStopTwo: opaque = timerStartTwo.stopTimer();

  // check to makesure that the second timer took will longer than the first timer
  // INFO: this was the small possibility of failing due to external factors
  var diffData: opaque = timerStop.compareTimer(timerStopTwo);

  assert diffData.getTimerSeconds() >= 0, "compareTimer() second are failed";
  if (diffData.getTimerSeconds() == 0) {
    assert diffData.getTimerMicroseconds() >= 0, "compareTimer() microseconds failed";
  }

  timerStart.destroyTimer();
  timerStartTwo.destroyTimer();
  
  timerStop.destroyTimer();
  timerStopTwo.destroyTimer();
  diffData.destroyTimer();
}

{
  // create timer, and manipulate it's value
