{
  // set timer to check the string representation
  import timer;

  var timer: opaque = createTimer(20, 999);
  assert timer.timerToString() == "20.000999", "timerToString() gagal loh ya lagi";

  timer.destroyTimer();
}

{
  // test positive and negative values of timers
  import timer;

  var a: opaque = createTimer(1, 0);
  var b: opaque = createTimer(2, 0);

  var acmp: opaque = a.compareTimer(b);
  var bcmp: opaque = b.compareTimer(a);

  var c: opaque = createTimer(0, 1);
  var d: opaque = createTimer(0, 2);

  var ccmp: opaque = c.compareTimer(d);
  var dcmp: opaque = d.compareTimer(c);

  assert acmp.timerToString() == "1.000000", "positive and negative test failed loh ya (acmp)";
  assert bcmp.timerToString() == "-1.000000", "positive and negative test failed loh ya (bcmp)";
  assert ccmp.timerToString() == "0.000001", "positive and negative test failed loy ya (ccmp)";
  assert dcmp.timerToString() == "-0.000001", "positive and negative test failed loh ya (dcmp)";

  a.destroyTimer();
  b.destroyTimer();
  c.destroyTimer();
  d.destroyTimer();
  acmp.destroyTimer();
  bcmp.destroyTimer();
  ccmp.destroyTimer();
  dcmp.destroyTimer();
}

